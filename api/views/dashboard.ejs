<!DOCTYPE html>
<html lang="en" class="scroll-smooth h-100" style="overflow: hidden;">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js"></script>
    <style>
        .messages {
            overflow-y: auto;
            scrollbar-width: none;
        }

        .messages::-webkit-scrollbar {
            display: none;
        }

        .message {
            width: 100%;
            word-wrap: break-word;
        }

        .message .message-text {
            word-wrap: break-word;
            word-break: break-word;
            white-space: pre-wrap;
            overflow-wrap: break-word;
        }

        .message .message-details {
            font-size: 0.8rem;
            color: #666;
        }

        .message .message-details .message-date {
            margin-right: 5px;
        }
    </style>
</head>

<body class="h-100 text-white" style="background-color: #1d2b3a;">
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-md-3 custom-sidebar p-0" style="background-color: #1d2e3f;">
                <div class="p-3 text-end">
                    <a href="/dashboard/courses" class="btn btn-warning w-100">
                        <i class="bi bi-house-fill me-2"></i>
                        <span>Courses</span>
                    </a>
                </div>
                <form class="search-form p-2">
                    <input type="text" class="form-control bg-transparent border-0" placeholder="Search groups"
                        aria-label="Search groups">
                </form>
                <div class="list-group">
                    <a href="#"
                        class="list-group-item list-group-item-action active border-0 text-white d-flex align-items-center"
                        style="background-color: #2a3a4a;" onclick="toggleChatScreen()">
                        <i class="bi bi-people-fill me-2"></i>
                        <span>Group 1</span>
                    </a>
                    <a href="#"
                        class="list-group-item list-group-item-action bg-transparent border-0 text-white d-flex align-items-center"
                        onclick="toggleChatScreen()">
                        <i class="bi bi-cpu-fill me-2"></i>
                        <span>Group 2</span>
                    </a>
                    <a href="#"
                        class="list-group-item list-group-item-action bg-transparent border-0 text-white d-flex align-items-center"
                        onclick="toggleChatScreen()">
                        <i class="bi bi-chat-dots-fill me-2"></i>
                        <span>Group 3</span>
                    </a>
                </div>
            </div>
            <div class="col-md-9 chat-content h-100 d-flex flex-column p-0">
                <div class="messages p-3 d-flex flex-column-reverse overflow-auto"
                    style="height: calc(100vh - 100px); background-color: #0d1824;">
                    <!-- More messages -->
                </div>
                <div class="input-group w-100 p-3" style="background-color: #1d2b3a;">
                    <input type="text" class="form-control bg-transparent border text-white flex-grow-1"
                        id="message-input" placeholder="Type your message" aria-label="Message"
                        aria-describedby="basic-addon2" style="white-space: pre-wrap;">
                    <div class="input-group-append">
                        <button class="btn btn-warning" type="button" id="send-message-btn">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary d-md-none" onclick="toggleSidebar()">Toggle Sidebar</button>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js"></script>
    <script>
        const supabaseUrl = "https://adyyoquqtlopdnqampep.supabase.co"
        const supabaseKey = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImFkeXlvcXVxdGxvcGRucWFtcGVwIiwicm9sZSI6ImFub24iLCJpYXQiOjE3Mzc4ODIzNzMsImV4cCI6MjA1MzQ1ODM3M30.YeYjNactqap6nDbdPBADeVxsvlFSdcO-Js8NFH2G5Bs"
        const supabaseClient = supabase.createClient(supabaseUrl, supabaseKey);

        const channel = supabaseClient.channel("room1")

        $(document).ready(async () => {
            const groups = $('.list-group-item');
            $('.search-form input[type="text"]').on('input', function () {
                const searchValue = $(this).val().toLowerCase();
                groups.each(function () {
                    const groupText = $(this).text().toLowerCase();
                    if (groupText.includes(searchValue)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });

            $('#send-message-btn').on('click', async function () {
                const message = $('#message-input').val();
                if (message.trim() !== '') {
                    await sendMessage(message);
                    $('#message-input').val('');
                }
            });

            $('#message-input').on('keyup', async function (event) {
                if (event.key === 'Enter') {
                    const message = $(this).val();
                    if (message.trim() !== '') {
                        await sendMessage(message);
                        $(this).val('');
                    }
                }
            });

            channel.on("broadcast", { event: "new-message" }, (data) => {
                console.log("New message received!", data);
                const payload = data.payload;
                displayMessage(payload.message, payload.sender);
            }).subscribe((status) => {
                if (status === "SUBSCRIBED") {
                    console.log("Subscribed to messages channel");
                }
            });

            async function sendMessage(message) {
                const { data, error } = await supabaseClient
                    .from('messages')
                    .insert([
                        { sender: 'user', message: message, group: 'Group 1' }
                    ]);

                if (error) {
                    console.error('Error sending message:', error);
                    return;
                }

                await displayMessage(message, 'user');

                channel.send({
                    type: "broadcast",
                    event: "new-message",
                    payload: { message: message, sender: 'user' },
                });
            }

            async function displayMessage(message, sender) {
                const messageElement = $('<div class="message rounded p-2 mb-2 text-end ms-auto d-flex align-items-center" style="width: 100%; max-width: 100%; background-color: #1d2e3f; word-wrap: break-word;"></div>');
                const messageText = $('<p class="message-text"></p>');
                messageText.text(message);
                const messageDetails = $('<div class="message-details"></div>');
                const messageDate = $('<span class="message-date"></span>');
                messageDate.text(new Date().toLocaleTimeString());
                const messageSender = $('<span class="message-sender"></span>');
                messageSender.text(sender);
                messageDetails.append(messageSender, messageDate);
                messageElement.append(messageText, messageDetails);

                const messageContainer = $('<div class="d-flex align-items-center mb-2"></div>');
                messageContainer.append(messageElement);

                $('.messages').prepend(messageContainer);
            }


            async function fetchMessages() {
                const { data, error } = await supabaseClient
                    .from('messages')
                    .select();

                if (error) {
                    console.error('Error fetching messages:', error);
                    return;
                }

                console.log(data);

                $('.messages').empty();
                data.forEach(msg => {
                    const messageElement = $('<div class="message rounded p-2 mb-2 text-end ms-auto d-flex align-items-center" style="width: 100%; max-width: 100%; background-color: #1d2e3f;"></div>');
                    const messageText = $('<p class="message-text" style="word-wrap: break-word;"></p>');
                    messageText.text(msg.message);
                    const messageDetails = $('<div class="message-details"></div>');
                    const messageDate = $('<span class="message-date"></span>');
                    messageDate.text(new Date(msg.created_at).toLocaleTimeString());
                    const messageSender = $('<span class="message-sender"></span>');
                    messageSender.text(msg.sender);
                    messageDetails.append(messageSender, messageDate);
                    messageElement.append(messageText, messageDetails);

                    const messageContainer = $('<div class="d-flex align-items-center mb-2"></div>');
                    messageContainer.append(messageElement);

                    $('.messages').prepend(messageContainer);
                });
            }

            fetchMessages();
        });

        function toggleSidebar() {
            $('.chat-sidebar').toggleClass('active');
        }

        function toggleChatScreen() {
            if (window.innerWidth <= 768) {
                $('.chat-sidebar').removeClass('active');
            }
        }
    </script>
</body>

</html>