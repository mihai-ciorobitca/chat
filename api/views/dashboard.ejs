<!DOCTYPE html>
<html lang="en" class="scroll-smooth h-100" style="overflow: hidden;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="h-100 bg-dark">
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-md-3 custom-sidebar border-right p-0">
                <div class="p-3 text-end">
                    <a href="/dashboard/courses" class="btn btn-warning w-100">
                        <i class="bi bi-house-fill me-2"></i>
                        <span>Courses</span>
                    </a>
                </div>
                <form class="search-form p-2">
                    <input type="text" class="form-control bg-transparent border-0" placeholder="Search groups" aria-label="Search groups">
                </form>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active bg-secondary border-0 text-white d-flex align-items-center" onclick="toggleChatScreen()">
                        <i class="bi bi-people-fill me-2"></i>
                        <span>Group 1</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-transparent border-0 text-white d-flex align-items-center" onclick="toggleChatScreen()">
                        <i class="bi bi-cpu-fill me-2"></i>
                        <span>Group 2</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-transparent border-0 text-white d-flex align-items-center" onclick="toggleChatScreen()">
                        <i class="bi bi-chat-dots-fill me-2"></i>
                        <span>Group 3</span>
                    </a>
                </div>
            </div>
            <div class="col-md-9 chat-content h-100 d-flex flex-column p-0">
                <div class="messages bg-dark p-3 d-flex flex-column-reverse overflow-auto" style="height: calc(100vh - 100px);">
                    <!-- More messages -->
                </div>
                <div class="input-group w-100 p-3 border-top">
                    <input type="text" class="form-control bg-transparent border text-white flex-grow-1" id="message-input" placeholder="Type your message" aria-label="Message" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-warning" type="button" id="send-message-btn">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary d-md-none" onclick="toggleSidebar()">Toggle Sidebar</button>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script>
        $(document).ready(() => {
            const groups = $('.list-group-item');
            $('.search-form input[type="text"]').on('input', function () {
                const searchValue = $(this).val().toLowerCase();
                groups.each(function () {
                    const groupText = $(this).text().toLowerCase();
                    if (groupText.includes(searchValue)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });

            $('#send-message-btn').on('click', function () {
                const message = $('#message-input').val();
                if (message.trim() !== '') {
                    const messageElement = $('<div class="message rounded p-2 mb-2 bg-warning text-end ms-auto" style="max-width: 75%; word-wrap: break-word; width: fit-content; margin-left: auto;"></div>');
                    const messageText = $('<p style="word-wrap: break-word;"></p>');
                    messageText.text(message);
                    messageElement.append(messageText);
                    $('.messages').prepend(messageElement);
                    $('#message-input').val('');
                }
            });

            $('#message-input').on('keyup', function (event) {
                if (event.key === 'Enter') {
                    const message = $(this).val();
                    if (message.trim() !== '') {
                        const messageElement = $('<div class="message rounded p-2 mb-2 bg-warning text-end ms-auto" style="max-width: 75%; word-wrap: break-word; width: fit-content; margin-left: auto;"></div>');
                        const messageText = $('<p style="word-wrap: break-word;"></p>');
                        messageText.text(message);
                        messageElement.append(messageText);
                        $('.messages').prepend(messageElement);
                        $(this).val('');
                    }
                }
            });
        });

        function toggleSidebar() {
            $('.chat-sidebar').toggleClass('active');
        }

        function toggleChatScreen() {
            if (window.innerWidth <= 768) {
                $('.chat-sidebar').removeClass('active');
            }
        }
    </script>
</body>

</html>

